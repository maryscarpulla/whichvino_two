<div class="page-header">
  <h1>
    My wines
    <a href="/my_wines/new" class="btn btn-lg btn-success">New My wine</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Wine</th>
        <th>Bucket list</th>
        <th>Actions</th>
      </tr>

      <% @my_wines.each do |my_wine| %>
      <tr>
        <td><%= my_wine.user.email %></td>
        <td><%= my_wine.wine.name %></td>
        <td><%= my_wine.bucket_list %></td>
        <td>
          <a href="/my_wines/<%= my_wine.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == my_wine.user %>
            <a href="/my_wines/<%= my_wine.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_my_wine/<%= my_wine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
