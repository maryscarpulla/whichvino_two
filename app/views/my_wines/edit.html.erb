<!-- Validation failure messages -->
<% if @my_wine.errors.any? %>
<% @my_wine.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Edit My Wine #<%= @my_wine.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_my_wine/<%= @my_wine.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @my_wine.name %>">
      </div>

      <!-- Label and input for winery -->
      <div class="form-group">
        <label for="winery" class="control-label">
          Winery
        </label>

        <input type="text" id="winery" name="winery" placeholder="Winery" class="form-control" value="<%= @my_wine.wine_id.winery %>">
      </div>

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="control-label">
          Year
        </label>

        <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @my_wine.wine_id.year %>">
      </div>

      <!-- Label and input for varietal_id -->
      <div class="form-group">
        <label for="varietal_id" class="control-label">
          Varietal
        </label>

        <%= select_tag(:varietal_id, options_from_collection_for_select(Varietal.all, :id, :varietal_name, @my_wines.varietal_id), :class => "form-control") %>

        <!-- <input type="text" id="varietal_id" name="varietal_id" placeholder="Varietal" class="form-control" value="<%= @wine.varietal_id %>"> -->
        <a href="/varietals/new">Add a new varietal</a>
      </div>


      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @my_wines.wine_id.price %>">
      </div>


      <button class="btn btn-success">
        Create Wine
      </button>
      or
      <a href="/wines">Cancel</a>
    </form>
  </div>

