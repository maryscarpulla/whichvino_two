<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Stars</dt>
      <dd><%= @review.stars %></dd>

      <dt>Review full text</dt>
      <dd><%= @review.review_full_text %></dd>

      <dt>User</dt>
      <dd><%= @review.user_id %></dd>

      <dt>Wine</dt>
      <dd><%= @review.wine_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
