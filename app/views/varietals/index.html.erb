<div class="page-header">
  <h1>
    Varietals
    <a href="/varietals/new" class="btn btn-lg btn-success">New Varietal</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Varietal name</th>
        <th>Actions</th>
      </tr>

      <% @varietals.each do |varietal| %>
      <tr>
        <td><%= varietal.varietal_name %></td>
        <td>
          <a href="/varietals/<%= varietal.id %>" class="btn btn-primary">Show</a>
          <a href="/varietals/<%= varietal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_varietal/<%= varietal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
